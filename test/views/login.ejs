  <body>
    <div class="card text-center" style="width: 25rem">
      <div class="card-body">
        <h5 class="card-title">Login Page</h5>

        <img
          src="https://lh3.googleusercontent.com/ogw/ADea4I6Yh4PD1QaWeQ6g_9NNxFdG5i1H193igvh1qzpW=s64-c-mo"
          id="logo"
          class="card-img-top"
        />

        <form
          id="login-form"
          action="/login"
          method="post"
          onsubmit="return loginSubmit();"
        >
          <div class="form-floating mb-3">
            <input
              type="text"
              name="id"
              class="form-control"
              id="id"
              placeholder="ID"
            />
            <label for="id">ID</label>
          </div>

          <div class="form-floating mb-3">
            <input
              type="password"
              name="password"
              class="form-control"
              id="password"
              placeholder="Password"
            />
            <label for="password">Password</label>
          </div>

          <div class="form-check form-switch" style="text-align: left">
            <input
              class="form-check-input"
              type="checkbox"
              name="firebase"
              role="switch"
              id="flexSwitchCheckDefault"
              checked
            />
            <label class="form-check-label" for="flexSwitchCheckDefault"
              >Firebase</label
            >
          </div>

          <div class="d-grid gap-2 mb-3">
            <input
              type="submit"
              id="login-button"
              class="btn btn-primary btn-lg"
              value="Login"
            />
          </div>
        </form>

        <div class="d-grid gap-2">
          <button id="signup-button" class="btn btn-danger btn-lg">
            Sign up
          </button>
        </div>

        <!-- google login button -->
        <div class="d-grid gap-2 mt-2">
          <img
            id="google-login"
            src="/images/google.png"
            class="img-thumbnail"
          />
        </div>
      </div>
    </div>

    <script src="/javascripts/login.js"></script>
  </body>
</html>
